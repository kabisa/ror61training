<h3>Create a comment</h3>
<%= form_with(model: [commentable, new_comment]) do |form| %>
  <div class="field">
    <%= form.text_area :body, size: '100x6' %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= render(commentable.comments) || 'There are no comments yet.' %>
