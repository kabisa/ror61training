<h3>Create a comment</h3>
<%= form_with(model: [link, new_comment]) do |form| %>
  <div class="field">
    <%= form.text_area :body, size: '100x6' %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<% if link.comments.any? %>
  <ul>
    <%= render link.comments %>
  </ul>
<% else %>
  <p>There are no comments yet.</p>
<% end %>
